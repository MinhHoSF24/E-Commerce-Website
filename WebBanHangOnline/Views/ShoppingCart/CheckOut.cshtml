@model WebBanHangOnline.Models.OrderViewModel
@{
    ViewBag.Title = "Check Out";
}
<style>
    .error{
        color: red;
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="~/home/index">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Cart</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row">

                <div class="col-md-12 text-center">
                    <h1>Check Out</h1>
                    <h4 style="color:red;">Please check your information before check out!</h4>
                </div>

            </div>
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div id="show_failed"></div>
                    <div class="col-md-9">
                        @Html.Action("Partial_CheckOut", "ShoppingCart")
                    </div>
                    <div class="col-md-3">
                        @Html.Action("Partial_Item_Cart_PlaceOrder", "ShoppingCart")
                    </div>
                </div>
            }
            else
            {
                <div>
                    You do not have any product in your cart. Please return <a href="/product">product</a> and add items to cart to check out!!!
                </div>
            }



        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function OnFailure(rs) {
            if (rs.Success) {
                $('#show_failed').html("Buy failed. Please try again!!");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                },
                message: {
                    'CustomerName': 'Cannot be empty!',
                    'Phone': 'Cannot be empty!',
                    'Address': 'Cannot be empty!',
                    'Email': 'Invalid email!',
                }
            });
        });
    </script>

}

